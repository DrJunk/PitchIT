<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890!@#$%^*()_+='/.,"
        android:background="@android:color/transparent"
        android:maxLength="22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="@string/head_hint"
        android:textSize="35dp"
        android:id="@+id/new_Head"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:gravity="top|left"
        android:maxLines="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ff231f20" />

    <EditText
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890!@#$%^*()_+='/.,"
        android:background="@android:color/transparent"
        android:lines="8"
        android:maxLength="200"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textSize="20dp"
        android:id="@+id/new_Body"
        android:hint="@string/body_hint"
        android:inputType="textMultiLine"
        android:imeOptions="actionGo"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ff231f20" />
    <TextView
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"
        android:id="@+id/body_chars_left"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ff231f20" />


</LinearLayout>